<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfilePage">


        <TextView
            android:id="@+id/tv_UserProfile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="User Profile"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@id/middleend"
            app:layout_constraintStart_toStartOf="@id/middlestart"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageView
            android:id="@+id/profileicon_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_profileiconsvg"
            app:layout_constraintEnd_toEndOf="@id/middleend"
            app:layout_constraintStart_toStartOf="@id/containerstart_id"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backarrow_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toStartOf="@id/containerstart_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_backarrow" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardcontainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline1"
            app:strokeColor="#22000000"
            app:strokeWidth="2dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_edit_alt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/editiconstart"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/et_fullname_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="textPersonName"
                    android:paddingBottom="25dp"
                    android:text="FullName"
                    android:textColor="#A1A1A1"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_email_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="25dp"
                    android:text="Email"
                    android:textColor="#A1A1A1"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/et_fullname_id" />

                <EditText
                    android:id="@+id/et_password_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="textVisiblePassword"
                    android:paddingBottom="25dp"
                    android:text="Password"
                    android:textColor="#A1A1A1"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/et_email_id" />

                <TextView
                    android:id="@+id/tv_dob_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="DOB:"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/et_password_id" />

                <TextView
                    android:id="@+id/dateexample"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="17/04/1997"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/tv_dob_id" />


                <TextView
                    android:id="@+id/tv_gender_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Gender:"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/dateexample" />

                <RadioGroup
                    android:id="@+id/radiobtns_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/tv_gender_id"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbmale_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:textSize="15sp"
                        android:layout_marginRight="5dp"
                        />

                    <RadioButton
                        android:id="@+id/rbfemale_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:textSize="15sp"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_Country_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Country:"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/radiobtns_id" />

                <TextView
                    android:id="@+id/Countryexample"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Country Name"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/tv_Country_id" />

                <TextView
                    android:id="@+id/tv_vaccinestats_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Vaccine Status:"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/Countryexample" />


                <TextView
                    android:id="@+id/vaccineexample"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="VaccineX: 2"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/tv_vaccinestats_id" />

                <TextView
                    android:id="@+id/vaccineexample2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="VaccineY: 1"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/vaccineexample"
                    app:layout_constraintBottom_toTopOf="@id/bt_save_id"
                    />


                <Button
                    android:id="@+id/bt_save_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/capbuttonpressselector"
                    android:enabled="true"
                    android:letterSpacing="0.02"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/editiconstart"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/cardstart"
                    app:layout_constraintTop_toBottomOf="@id/vaccineexample2"
                    app:layout_constraintVertical_bias="0.0"></Button>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/cardstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/editiconstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.87" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>




        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/containerstart_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middlestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middleend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/buttonstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/buttonend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>