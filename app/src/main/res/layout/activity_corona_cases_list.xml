<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05FF0000"
    android:padding="20dp"
    tools:context=".CoronaCasesList">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Corona Cases"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="44dp"
        android:layout_height="34dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028"
        app:srcCompat="@drawable/ic_backbuttonsvg" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:strokeColor="#22000000"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:text="Country"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:text="Cases"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:text="Deaths"/>



            </LinearLayout>



            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/ItemShimmer_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>
                    <include layout="@layout/item_shimmer"></include>

                </LinearLayout>


            </com.facebook.shimmer.ShimmerFrameLayout>




            <ListView
                android:scrollbarSize="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item"
                />

        </LinearLayout>




    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

</androidx.constraintlayout.widget.ConstraintLayout>